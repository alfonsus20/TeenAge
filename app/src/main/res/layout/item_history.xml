<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/tv_drink_image"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/energy_drink" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="@+id/tv_drink_image"
        app:layout_constraintStart_toEndOf="@+id/tv_drink_image"
        app:layout_constraintTop_toTopOf="@+id/tv_drink_image">

        <TextView
            android:id="@+id/tv_drink_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="testest"
            android:textColor="@color/primary"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="16dp" />


        <TextView
            android:id="@+id/tv_drink_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 : 00"
            android:textSize="12sp"
            tools:layout_editor_absoluteX="84dp"
            tools:layout_editor_absoluteY="55dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_drink_volume_history"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/tv_drink_image"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_drink_image" />
</androidx.constraintlayout.widget.ConstraintLayout>